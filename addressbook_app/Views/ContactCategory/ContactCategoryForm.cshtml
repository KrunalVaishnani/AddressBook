@model addressbook_app.Models.ContactCategoryModel

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa fa-arrow-right"></i>
        </li>
        <li>
            <span>ContactCategory Add/Edit</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->

<div class="portlet light bordered" style="width:120vh;margin-top:2vh;">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">ContactCategory Add/Edit</span>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form">
            @Html.HiddenFor(m => m.ContactCategoryID)

            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label"><span class="text-danger">*</span>ContactCategory Name</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="ContactCategoryName">
                        <span asp-validation-for="ContactCategoryName" class="text-danger"></span>
                    </div>
                </div>


                @* <div class="form-group">
                <label asp-for="UserID" class="col-md-3 control-label"><span class="text-danger fs-bold"></span>User Name</label>
                <div class="col-md-9">

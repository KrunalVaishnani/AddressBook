                <option value="">Select User</option>
                @foreach (var user in ViewBag.UserList)
                {
                <option value="@user.UserID">@user.DisplayName</option>
                }
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                </div> *@

                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" asp-controller="ContactCategory" asp-action="ContactCategoryAddEdit" class="btn green" value="Submit" />
                            <a asp-controller="ContactCategory" asp-action="ContactCategoryList" type="button" class="btn default">Cancel</a>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

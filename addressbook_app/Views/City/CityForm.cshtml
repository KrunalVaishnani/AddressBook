@model addressbook_app.Models.CityModel

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa fa-arrow-right"></i>
        </li>
        <li>
            <span>City Add/Edit</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->

<div class="portlet light bordered" style="width:120vh;margin-top:2vh;">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">City Add/Edit</span>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form">
            @Html.HiddenFor(m => m.CityID)

            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label"><span class="text-danger">*</span>City Name</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="CityName">
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"><span class="text-danger">*</span>City Code</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="CityCode">
                        <span asp-validation-for="CityCode" class="text-danger"></span>
                    </div>
                </div>                

                @* <div class="form-group">
                    <label for="country" class="col-md-3 control-label"><span class="text-danger fs-bold">*</span>Country Name</label>
                    <div class="col-md-9">
                        <select class="form-control" id="country" name="country">
                            <option value="">Select Country</option>
                            @foreach (var country in ViewBag.CountryList)
                            {
                                <option value="@country.CountryID">@country.CountryName</option>
                            }
                        </select>
                        <span class="text-danger"></span>
                    </div>
                </div> *@

                <div class="form-group">
                    <label class="col-md-3 control-label"><span class="text-danger">*</span>Country</label>
                    <div class="col-md-9">
                        <select id="country" class="form-control" asp-for="CountryID">
                            <option value="">Select Country</option>
                            @foreach (var country in ViewBag.CountryList)
                            {
                                <option value="@country.CountryID">@country.CountryName</option>
                            }
                        </select>
                        <span asp-validation-for="CountryID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label"><span class="text-danger">*</span>State</label>
                    <div class="col-md-9">
                        <select id="state" class="form-control" asp-for="StateID">
                            <option value="">Select State</option>
                            @if (ViewBag.StateList != null){
                                @foreach (var state in ViewBag.StateList)
                                {
                                    <option value="@state.StateID">@state.StateName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="StateID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" asp-controller="City" asp-action="CityAddEdit" class="btn green" value="Submit" />
                            <a asp-controller="City" asp-action="CityList" type="button" class="btn default">Cancel</a>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#country').change(function () {
                var countryId = $(this).val();
                var $stateDropdown = $('#state');
                $stateDropdown.empty().append('<option value="">Select State</option>');

                if (countryId) {
                    $.ajax({
                        url: '/City/GetStatesByCountry',
                        type: 'GET',
                        data: { countryId: countryId },
                        success: function (response) {
                            if (response && response.length > 0) {
                                response.forEach(function (state) {
                                    $stateDropdown.append(`<option value="${state.stateID}">${state.stateName}</option>`);
                                });
                            } else {
                                $('<option disabled>No states available</option>').appendTo($stateDropdown);
                            }
                        },
                        error: function (xhr) {
                            console.error(xhr.responseText || "Error fetching states");
                            alert("Unable to load states. Please try again later.");
                        }
                    });
                }
            });
        });
    </script>

}
